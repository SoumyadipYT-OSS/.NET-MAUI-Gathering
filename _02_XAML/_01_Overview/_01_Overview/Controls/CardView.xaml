<?xml version="1.0" encoding="utf-8" ?>
<!--
    CardView: A custom ContentView control demonstrating ControlTemplate usage.
    Uses bindable properties that are bound via TemplateBinding in the control template.
    Docs: https://learn.microsoft.com/dotnet/maui/fundamentals/controltemplate
-->
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_01_Overview.Controls.CardView"
             x:Name="this">

    <!-- Default ControlTemplate - can be overridden via Style or direct property -->
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <!-- Border provides the card frame with rounded corners -->
            <Border Stroke="{TemplateBinding BorderColor}"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 12"
                    BackgroundColor="{TemplateBinding CardBackgroundColor}"
                    Padding="16"
                    Margin="8">
                
                <!-- Shadow for elevation effect -->
                <Border.Shadow>
                    <Shadow Brush="{StaticResource Gray400Brush}"
                            Offset="4,4"
                            Radius="8"
                            Opacity="0.3" />
                </Border.Shadow>

                <Grid RowDefinitions="Auto,*,Auto" RowSpacing="8">
                    
                    <!-- Card Header -->
                    <Label Grid.Row="0"
                           Text="{TemplateBinding CardTitle}"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{TemplateBinding BorderColor}" />
                    
                    <!-- Content Presenter - renders the Content property -->
                    <ContentPresenter Grid.Row="1" />
                    
                    <!-- Card Footer -->
                    <Label Grid.Row="2"
                           Text="{TemplateBinding CardFooter}"
                           FontSize="12"
                           TextColor="{StaticResource Gray500}"
                           IsVisible="{TemplateBinding HasFooter}" />
                </Grid>
            </Border>
        </ControlTemplate>
    </ContentView.ControlTemplate>

</ContentView>
