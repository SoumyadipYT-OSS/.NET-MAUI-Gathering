<?xml version="1.0" encoding="UTF-8" ?>
<!--
    Dark Theme Resources for XAML Overview Learning Project.
    These colors use x:Key so they can be referenced via DynamicResource for runtime switching.
    Docs: https://learn.microsoft.com/dotnet/maui/user-interface/theming
-->
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="_01_Overview.Resources.Styles.DarkTheme">

    <!-- Primary Colors -->
    <Color x:Key="ThemePrimary">#AC99EA</Color>
    <Color x:Key="ThemePrimaryDark">#8B6FD9</Color>
    <Color x:Key="ThemeSecondary">#4A3B6E</Color>
    <Color x:Key="ThemeAccent">#C4B5FF</Color>
    
    <!-- Background Colors -->
    <Color x:Key="ThemePageBackground">#121212</Color>
    <Color x:Key="ThemeCardBackground">#1E1E1E</Color>
    <Color x:Key="ThemeSurfaceBackground">#252525</Color>
    
    <!-- Text Colors -->
    <Color x:Key="ThemeTextPrimary">#FFFFFF</Color>
    <Color x:Key="ThemeTextSecondary">#B0B0B0</Color>
    <Color x:Key="ThemeTextMuted">#757575</Color>
    <Color x:Key="ThemeTextOnPrimary">#1F1F1F</Color>
    
    <!-- Border & Divider Colors -->
    <Color x:Key="ThemeBorder">#3D3D3D</Color>
    <Color x:Key="ThemeDivider">#2D2D2D</Color>
    
    <!-- Status Colors -->
    <Color x:Key="ThemeSuccess">#4CAF50</Color>
    <Color x:Key="ThemeWarning">#FFCA28</Color>
    <Color x:Key="ThemeError">#EF5350</Color>
    <Color x:Key="ThemeInfo">#29B6F6</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="ThemePrimaryBrush" Color="{StaticResource ThemePrimary}" />
    <SolidColorBrush x:Key="ThemePageBackgroundBrush" Color="{StaticResource ThemePageBackground}" />
    <SolidColorBrush x:Key="ThemeTextPrimaryBrush" Color="{StaticResource ThemeTextPrimary}" />

</ResourceDictionary>
