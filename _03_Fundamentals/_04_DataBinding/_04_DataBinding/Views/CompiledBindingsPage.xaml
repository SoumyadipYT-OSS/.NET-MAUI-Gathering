<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:_04_DataBinding.ViewModels"
             x:Class="_04_DataBinding.Views.CompiledBindingsPage"
             x:DataType="vm:CompiledBindingsViewModel"
             Title="9. Compiled bindings">

    <ContentPage.BindingContext>
        <vm:CompiledBindingsViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="16">

            <Label Text="Compiled bindings"
                   FontSize="22"
                   FontAttributes="Bold" />

            <Label Text="Compiled bindings use x:DataType to validate bindings at build-time and reduce reflection at runtime." />

            <Border Padding="12" Stroke="LightGray" StrokeShape="RoundRectangle 8">
                <VerticalStackLayout Spacing="10">
                    <Label Text="A) Page-level x:DataType" FontAttributes="Bold" />

                    <Entry Text="{Binding Name}" />
                    <Label Text="{Binding Name, StringFormat='Hello, {0}!'}" />

                    <Slider Minimum="0" Maximum="100" Value="{Binding Progress}" />
                    <ProgressBar Progress="{Binding ProgressNormalized}" />
                </VerticalStackLayout>
            </Border>

            <Border Padding="12" Stroke="LightGray" StrokeShape="RoundRectangle 8">
                <VerticalStackLayout Spacing="10">
                    <Label Text="B) DataTemplate needs its own x:DataType" FontAttributes="Bold" />

                    <CollectionView ItemsSource="{Binding Items}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="x:String">
                                <Label Text="{Binding .}" />
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
