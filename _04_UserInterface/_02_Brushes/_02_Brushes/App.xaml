<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:_02_Brushes"
             xmlns:converters="clr-namespace:_02_Brushes.Converters"
             x:Class="_02_Brushes.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:ColorHexToColorConverter x:Key="ColorHexToColor" />
            <converters:PointFromDoublesConverter x:Key="PointFromDoubles" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
