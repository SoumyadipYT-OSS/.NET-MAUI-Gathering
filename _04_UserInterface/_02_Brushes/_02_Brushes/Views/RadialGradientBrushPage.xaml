<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="_02_Brushes.Views.RadialGradientBrushPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="{Binding Title}">

    <ScrollView>
        <VerticalStackLayout Spacing="16" Padding="16">
            <Label Text="RadialGradientBrush" FontSize="24" FontAttributes="Bold" />
            <Label
                Text="A radial gradient blends colors across a circle. Center and Radius are relative to the painted area. Offset 0 is at the center; offset 1 is at the circle circumference."
                FontSize="14"
                Opacity="0.85" />

            <Border
                Stroke="{AppThemeBinding Light=#D0D0D0, Dark=#404040}"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 12"
                HeightRequest="170">
                <Border.Background>
                    <!-- Center/Radius are updated from code-behind based on slider values. -->
                    <RadialGradientBrush x:Name="PreviewBrush">
                        <GradientStop Color="#FF2D55" Offset="{Binding InnerOffset}" />
                        <GradientStop Color="#0A84FF" Offset="1" />
                    </RadialGradientBrush>
                </Border.Background>
                <Grid Padding="12">
                    <Label Text="Move the center and radius" VerticalOptions="Center" />
                </Grid>
            </Border>

            <Label Text="Center: ({Binding CenterX, StringFormat='{0:F2}'}, {Binding CenterY, StringFormat='{0:F2}'})" />
            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto" ColumnSpacing="12" RowSpacing="10">
                <Label Grid.Row="0" Grid.Column="0" Text="X" VerticalOptions="Center" />
                <Slider Grid.Row="0" Grid.Column="1" Minimum="0" Maximum="1" Value="{Binding CenterX}" ValueChanged="OnAnyRadialChanged" />

                <Label Grid.Row="1" Grid.Column="0" Text="Y" VerticalOptions="Center" />
                <Slider Grid.Row="1" Grid.Column="1" Minimum="0" Maximum="1" Value="{Binding CenterY}" ValueChanged="OnAnyRadialChanged" />
            </Grid>

            <Label Text="Radius: {Binding Radius, StringFormat='{0:F2}'}" />
            <Slider Minimum="0" Maximum="1" Value="{Binding Radius}" ValueChanged="OnAnyRadialChanged" />

            <Label Text="Inner stop offset: {Binding InnerOffset, StringFormat='{0:F2}'}" />
            <Slider Minimum="0" Maximum="1" Value="{Binding InnerOffset}" />

            <Label Text="Presets" FontAttributes="Bold" />
            <HorizontalStackLayout Spacing="10">
                <Button Text="Center" Clicked="OnCenterClicked" />
                <Button Text="Top-left" Clicked="OnTopLeftClicked" />
                <Button Text="Bottom-right" Clicked="OnBottomRightClicked" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
