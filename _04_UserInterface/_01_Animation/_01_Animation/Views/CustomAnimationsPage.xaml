<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="_01_Animation.Views.CustomAnimationsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Custom animations">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="16">
            <Label Style="{StaticResource SubHeadline}" Text="Custom Animation" />
            <Label
                Text="Use the Animation class when you want to animate properties that don't have a built-in *To method (or when you want multiple child animations)." />

            <Border Padding="16" StrokeThickness="1">
                <VerticalStackLayout Spacing="12">
                    <Label FontAttributes="Bold" Text="Example: animate a progress ring (StrokeDashOffset)" />

                    <Grid HeightRequest="180">
                        <Border
                            x:Name="RingHost"
                            HorizontalOptions="Center"
                            StrokeThickness="0"
                            VerticalOptions="Center"
                            WidthRequest="160"
                            HeightRequest="160">
                            <GraphicsView x:Name="Ring" HeightRequest="160" WidthRequest="160" />
                        </Border>
                    </Grid>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                        <Button Grid.Column="0" Text="Run" Clicked="OnRunClicked" />
                        <Button Grid.Column="1" Text="Reset" Clicked="OnResetClicked" />
                    </Grid>

                    <Label
                        x:Name="Status"
                        TextColor="{AppThemeBinding Light={StaticResource Gray700}, Dark={StaticResource Gray300}}" />
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
