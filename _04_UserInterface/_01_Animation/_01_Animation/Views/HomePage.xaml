<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="_01_Animation.Views.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:_01_Animation.ViewModels"
    Title="Animation Fundamentals">

    <ContentPage.BindingContext>
        <vm:HomeViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="16">
            <Label Style="{StaticResource Headline}" Text=".NET MAUI Animations" />
            <Label
                Text="This mini-app contains isolated pages that demonstrate animation fundamentals based on the official Microsoft documentation." />

            <Border
                BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}"
                Padding="12"
                StrokeThickness="0">
                <VerticalStackLayout Spacing="8">
                    <Label FontAttributes="Bold" Text="How to use" />
                    <Label
                        Text="Tap a card to open the demo. Each demo has a Reset button to return the UI element to its initial state." />
                </VerticalStackLayout>
            </Border>

            <CollectionView ItemsSource="{Binding Demos}" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="vm:DemoItem">
                        <Border
                            Margin="0,0,0,12"
                            Padding="14"
                            StrokeThickness="1"
                            Stroke="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray700}}">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer
                                    CommandParameter="{Binding Route}"
                                    Tapped="OnDemoTapped" />
                            </Border.GestureRecognizers>

                            <VerticalStackLayout Spacing="6">
                                <Label FontSize="18" FontAttributes="Bold" Text="{Binding Title}" />
                                <Label TextColor="{AppThemeBinding Light={StaticResource Gray700}, Dark={StaticResource Gray300}}" Text="{Binding Description}" />
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
